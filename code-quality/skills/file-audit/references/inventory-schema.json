{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "file-audit-inventory",
  "title": "File Audit Inventory",
  "description": "Schema for the file-audit inventory.json output",
  "type": "object",
  "required": ["project", "analyzed_at", "files"],
  "properties": {
    "project": {
      "type": "string",
      "description": "Project name (from directory or package.json/pyproject.toml)"
    },
    "analyzed_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of analysis completion"
    },
    "summary": {
      "type": "object",
      "description": "Aggregate statistics for the audit",
      "properties": {
        "total_files": { "type": "integer", "minimum": 0 },
        "total_symbols": { "type": "integer", "minimum": 0 },
        "issues_by_severity": {
          "type": "object",
          "properties": {
            "error": { "type": "integer", "minimum": 0 },
            "warning": { "type": "integer", "minimum": 0 },
            "info": { "type": "integer", "minimum": 0 }
          }
        },
        "issues_by_type": {
          "type": "object",
          "properties": {
            "unused_code": { "type": "integer", "minimum": 0 },
            "incorrect_usage": { "type": "integer", "minimum": 0 },
            "duplication": { "type": "integer", "minimum": 0 },
            "documentation_drift": { "type": "integer", "minimum": 0 }
          }
        }
      }
    },
    "files": {
      "type": "array",
      "description": "Analysis results for each file",
      "items": { "$ref": "#/$defs/fileAnalysis" }
    },
    "pattern_registry": {
      "type": "object",
      "description": "Registry of all extracted patterns, keyed by hash",
      "additionalProperties": { "$ref": "#/$defs/patternEntry" }
    },
    "todos": {
      "type": "array",
      "description": "Consolidated TODO list generated from issues",
      "items": { "$ref": "#/$defs/todoItem" }
    }
  },
  "$defs": {
    "fileAnalysis": {
      "type": "object",
      "required": ["path", "purpose", "analyzed_at"],
      "properties": {
        "path": {
          "type": "string",
          "description": "Relative path from project root"
        },
        "purpose": {
          "type": "string",
          "description": "One-sentence description of file's purpose"
        },
        "analyzed_at": {
          "type": "string",
          "format": "date-time"
        },
        "line_count": {
          "type": "integer",
          "minimum": 0
        },
        "analysis_method": {
          "type": "string",
          "enum": ["lsp", "regex_fallback"],
          "default": "lsp"
        },
        "symbols": {
          "type": "array",
          "items": { "$ref": "#/$defs/symbol" }
        },
        "external_dependencies": {
          "type": "array",
          "items": { "$ref": "#/$defs/externalDependency" }
        },
        "issues": {
          "type": "array",
          "items": { "$ref": "#/$defs/issue" }
        },
        "patterns": {
          "type": "array",
          "description": "Patterns extracted from this file for duplicate detection",
          "items": { "$ref": "#/$defs/pattern" }
        },
        "duplicates": {
          "type": "array",
          "description": "Duplicate patterns found (populated post-analysis)",
          "items": { "$ref": "#/$defs/duplicate" }
        }
      }
    },
    "symbol": {
      "type": "object",
      "required": ["name", "type", "line"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Symbol name"
        },
        "type": {
          "type": "string",
          "enum": ["function", "class", "variable", "constant", "method", "property", "interface", "type", "enum"],
          "description": "Symbol kind"
        },
        "signature": {
          "type": "string",
          "description": "Type signature (if available from LSP hover)"
        },
        "docstring": {
          "type": "string",
          "description": "Docstring or JSDoc (if available)"
        },
        "line": {
          "type": "integer",
          "minimum": 1,
          "description": "Starting line number"
        },
        "end_line": {
          "type": "integer",
          "minimum": 1,
          "description": "Ending line number"
        },
        "visibility": {
          "type": "string",
          "enum": ["public", "private", "protected", "internal"],
          "description": "Visibility/accessibility"
        },
        "used_by": {
          "type": "array",
          "description": "References to this symbol from other files",
          "items": {
            "type": "string",
            "pattern": "^[^:]+:\\d+$",
            "description": "Format: path:line"
          }
        },
        "calls": {
          "type": "array",
          "description": "Outgoing calls from this symbol",
          "items": {
            "type": "string",
            "description": "Format: path:symbol or library:function"
          }
        },
        "reference_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of references (internal + external)"
        }
      }
    },
    "externalDependency": {
      "type": "object",
      "required": ["library", "functions_used"],
      "properties": {
        "library": {
          "type": "string",
          "description": "Library/package name"
        },
        "version_constraint": {
          "type": "string",
          "description": "Version constraint from package file (if detected)"
        },
        "functions_used": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Functions/classes imported and used from this library"
        },
        "usage_assessment": {
          "type": "string",
          "enum": ["correct", "deprecated_api", "wrong_signature", "missing_error_handling", "unknown"],
          "description": "Assessment of usage correctness (from Context7)"
        },
        "notes": {
          "type": ["string", "null"],
          "description": "Explanation of any issues found"
        },
        "context7_validated": {
          "type": "boolean",
          "description": "Whether Context7 was used to validate this dependency"
        },
        "context7_library_id": {
          "type": "string",
          "description": "Context7 library ID used for validation"
        }
      }
    },
    "issue": {
      "type": "object",
      "required": ["type", "severity", "description"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique issue identifier within this file"
        },
        "type": {
          "type": "string",
          "enum": ["unused_code", "incorrect_usage", "duplication", "documentation_drift", "style"],
          "description": "Issue category"
        },
        "subtype": {
          "type": "string",
          "enum": [
            "unreferenced_function",
            "unreferenced_variable",
            "unreferenced_class",
            "dead_import",
            "unreachable_code",
            "deprecated_api",
            "wrong_signature",
            "missing_error_handling",
            "type_mismatch",
            "security_issue",
            "exact_duplicate",
            "near_duplicate",
            "pattern_duplicate",
            "code_doc_mismatch",
            "missing_feature",
            "undocumented_feature",
            "naming_convention",
            "complexity",
            "missing_docstring",
            "magic_number"
          ],
          "description": "Specific issue type"
        },
        "severity": {
          "type": "string",
          "enum": ["error", "warning", "info"],
          "description": "Issue severity"
        },
        "location": {
          "type": "object",
          "properties": {
            "line": { "type": "integer", "minimum": 1 },
            "end_line": { "type": "integer", "minimum": 1 },
            "character": { "type": "integer", "minimum": 0 },
            "end_character": { "type": "integer", "minimum": 0 }
          },
          "required": ["line"]
        },
        "symbol": {
          "type": "string",
          "description": "Symbol name this issue relates to"
        },
        "description": {
          "type": "string",
          "description": "Human-readable issue description"
        },
        "evidence": {
          "type": "string",
          "description": "Evidence supporting this issue (LSP output, Context7 docs, etc.)"
        },
        "suggested_fix": {
          "type": "string",
          "description": "How to fix this issue"
        },
        "auto_fixable": {
          "type": "boolean",
          "description": "Whether this can be auto-fixed"
        },
        "fix_code": {
          "type": "string",
          "description": "Replacement code (if auto_fixable)"
        },
        "code_behavior": {
          "type": "string",
          "description": "What the code actually does (for drift issues)"
        },
        "documented_behavior": {
          "type": "string",
          "description": "What documentation claims (for drift issues)"
        }
      }
    },
    "pattern": {
      "type": "object",
      "required": ["hash", "type", "location"],
      "properties": {
        "hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{12}$",
          "description": "First 12 chars of SHA-256 hash of normalized content"
        },
        "name": {
          "type": "string",
          "description": "Descriptive name for this pattern"
        },
        "type": {
          "type": "string",
          "enum": ["function", "regex", "constant", "algorithm", "validation"],
          "description": "Pattern category"
        },
        "location": {
          "type": "object",
          "properties": {
            "line": { "type": "integer", "minimum": 1 },
            "end_line": { "type": "integer", "minimum": 1 }
          },
          "required": ["line"]
        },
        "normalized_content": {
          "type": "string",
          "description": "Normalized code content used for hashing"
        }
      }
    },
    "patternEntry": {
      "type": "object",
      "description": "Entry in the pattern registry (post-analysis)",
      "properties": {
        "name": {
          "type": "string",
          "description": "Descriptive name for this pattern"
        },
        "type": {
          "type": "string",
          "enum": ["function", "regex", "constant", "algorithm", "validation"]
        },
        "first_seen": {
          "type": "string",
          "pattern": "^[^:]+:\\d+$",
          "description": "First occurrence: path:line"
        },
        "occurrences": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[^:]+:\\d+$"
          },
          "description": "All occurrences: [path:line, ...]"
        }
      }
    },
    "duplicate": {
      "type": "object",
      "description": "Duplicate pattern found in this file",
      "properties": {
        "pattern_hash": {
          "type": "string",
          "description": "Hash of the duplicated pattern"
        },
        "pattern_name": {
          "type": "string",
          "description": "Descriptive name for the pattern"
        },
        "location": {
          "type": "object",
          "properties": {
            "line": { "type": "integer", "minimum": 1 },
            "end_line": { "type": "integer", "minimum": 1 }
          }
        },
        "first_seen_in": {
          "type": "string",
          "pattern": "^[^:]+:\\d+$",
          "description": "First occurrence location"
        },
        "also_in": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Other files containing this pattern"
        },
        "recommendation": {
          "type": "string",
          "description": "How to refactor this duplication"
        }
      }
    },
    "todoItem": {
      "type": "object",
      "required": ["file", "issue_type", "action", "priority"],
      "properties": {
        "file": {
          "type": "string",
          "description": "File path"
        },
        "issue_id": {
          "type": "string",
          "description": "Reference to the source issue"
        },
        "issue_type": {
          "type": "string",
          "description": "Issue category"
        },
        "action": {
          "type": "string",
          "description": "What action to take"
        },
        "priority": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low"],
          "description": "Priority based on severity"
        },
        "category": {
          "type": "string",
          "enum": ["cleanup", "deprecated_api", "security", "refactoring", "documentation"],
          "description": "Action category"
        }
      }
    }
  }
}
